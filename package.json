{
  "scripts": {
    "postinstall": "cd app && npm install",
    "dev": "node build/dev.js",
    "dev:server": "node build/dev-server.js",
    "dev:client": "cross-env HOT=1 electron ./app",
    "build": "rimraf dist && mkdirp dist && ncp app/package.json dist/package.json && cross-env NODE_ENV=production webpack --progress --hide-modules --config build/webpack.prod.conf.js",
    "package": "node ./build/package.js --platform=all --arch=all",
    "package:osx": "node ./build/package.js --platform=darwin --arch=x64",
    "package:win": "node ./build/package.js --platform=win32 --arch=all",
    "package:linux": "node ./build/package.js --platform=linux --arch=all",
    "release": "npm run build && npm run package",
    "unit": "karma start test/unit/karma.conf.js --single-run",
    "e2e": "node test/e2e/runner.js",
    "test": "npm run unit && npm run e2e"
  },
